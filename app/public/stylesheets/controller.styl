body
  background-color #ffffff
  color #222222
  text-align center
  font-size 20px
  font-family 'Open Sans',sans-serif
  font-weight 300
  margin 0
  padding 0
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

h1
  font-weight 700
  margin-bottom 10px

a
  color #000

nav
  ul
    width 281px
    margin 0 auto
    text-align left
    margin-bottom 40px

#scene
  transition background-color 0.4s
  -webkit-transition background-color 0.4s
  height 200px
  background-color #eee
  position relative
  &.roll
    background-color #ffcf49

#divider
  position absolute
  height 4px
  background #222
  top 50%
  margin-top -2px
  width 100%

#swing-up
  position absolute
  background #15b05d
  width 100px
  margin-left -50px
  height 0
  bottom 50%
  left 50%
  overflow hidden
  span
    position absolute
    top 6px
    display block
    width 100%
    text-align center
    font-weight bold
    color #fff

#swing-down
  position absolute
  background #be3d28
  width 100px
  margin-left -50px
  height 0
  top 50%
  left 50%
  overflow hidden
  span
    position absolute
    bottom 6px
    display block
    width 100%
    text-align center
    font-weight bold
    color #fff

