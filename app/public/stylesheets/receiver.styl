@import style

video
	width 640px
	height 480px

video.fakefullscreen
	position fixed
	width 100%
	height 100%
	left 0px
	top 0px
	z-index 0

#player1bar, #player2bar
	position fixed
	display none
	top 0px
	width 30px
	height 200px
	background-color offwhite
	z-index 99

#player1bar
	left 20px

#player2bar
	right 20px

